extends ../layout

block append script

block content
	.row
		.col-sm-8
			h1 List
			table(class='table')
				tbody
					tr
						td
							label(for='name') Name:
						td
							input(name='name', id='name', value='#{list ? list.name : ""}')
					tr
						td
							label(for='type') Type:
						td
							input(name='type', id='type', value='#{list ? list.type : ""}')
					tr
						td
							label(for='notes') Notes:
						td
							textarea(name='notes', id='notes', value='#{list ? list.notes : ""}')
